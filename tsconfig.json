{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "es6",
      "DOM",
      "DOM.Iterable",
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/interfaces"
    ]
  },
  "exclude": [
    "./node_modules",
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
